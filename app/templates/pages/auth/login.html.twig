{% extends 'base.html.twig' %}

{% block body %}

    <main class="container">

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <p>
                <label for="_username">Email</label>
                <input type="email" name="_username" id="_username" value="{{ last_username }}">
            </p>

            <p>
                <label for="_password">Mot de passe</label>
                <input type="password" name="_password" id="_password">
            </p>

            <button type="submit" class="btn btn-primary">Se connceter</button>
        </form>

    </main>
    
{% endblock %}